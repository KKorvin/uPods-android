<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorAccent">@color/red_500</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/white_material</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/viewPagerNotSelectedWhite</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="PlayerSeekBar" parent="Widget.AppCompat.SeekBar"></style>

</resources>
