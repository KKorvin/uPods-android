<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlNotification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/notification_background"
    android:gravity="center"
    android:padding="10dp">

    <ImageView
        android:id="@+id/imgPlayerNtBar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/tvPlayerTitleNtBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/lnNtButtons"
        android:layout_toRightOf="@+id/imgPlayerNtBar"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Textc"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvPlayerSubTitleNtBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlayerTitleNtBar"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/lnNtButtons"
        android:layout_toRightOf="@+id/imgPlayerNtBar"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/notification_grey" />

    <LinearLayout
        android:id="@+id/lnNtButtons"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnRewindLeftNtBar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_rewind_btn"
            android:src="@drawable/ic_rewind_white_left" />

        <ImageButton
            android:id="@+id/btnPlayNtBar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/circle_rewind_btn"
            android:src="@drawable/ic_pause_white" />

        <ImageButton
            android:id="@+id/btnRewindRightNtBar"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/circle_rewind_btn"
            android:src="@drawable/ic_rewind_white_right" />
    </LinearLayout>
</RelativeLayout>