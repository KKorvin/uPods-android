<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_playlist_item"
    android:descendantFocusability="blocksDescendants">

    <ImageButton
        android:id="@+id/btnPlPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:clickable="false"
        android:padding="15dp"
        android:src="@drawable/ic_play_white" />

    <TextView
        android:id="@+id/tvPlTrackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/tvPlTrackDuration"
        android:layout_toRightOf="@+id/btnPlPlay"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="daskclascksalcasklc"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvPlTrackSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPlTrackTitle"
        android:layout_marginRight="25dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/tvPlTrackDuration"
        android:layout_toRightOf="@+id/btnPlPlay"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="daskclascksalcasklc"
        android:textColor="@color/whiteGray" />

    <es.claucookie.miniequalizerlibrary.EqualizerView
        android:id="@+id/eqRadio"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        custom:animDuration="3500"
        custom:foregroundColor="@color/white" />

    <TextView
        android:id="@+id/tvPlTrackDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:text=""
        android:textColor="@color/whiteGray" />
</RelativeLayout>