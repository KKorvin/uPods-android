<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="100">

        <RelativeLayout
            android:id="@+id/rlTopSectionBckg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="68"
            android:background="@color/red_500">

            <ImageView
                android:id="@+id/imgPlayerCover"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bedolaga" />

            <ImageView
                android:id="@+id/imgClosePlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/abc_ic_clear_mtrl_alpha" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="18"
            android:background="@color/blue_grey_800"
            android:elevation="0dp"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:text="BBC Radio One"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size_26" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingLeft="12dp"
                android:text="Most popular Internet radio"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size_18" />

            <SeekBar
                android:layout_width="fill_parent"
                android:layout_height="6dp"
                android:max="100"
                android:padding="0px"
                android:progress="50"
                android:progressDrawable="@drawable/seek_bar_bckg"
                android:thumb="@drawable/seek_bar_thumb" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            android:background="@color/blue_grey_500"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/BtnRewindLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_rewind_white_left" />

            <ImageButton
                android:id="@+id/btnPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:background="@drawable/ic_play_white"
                android:text="Play" />

            <ImageButton
                android:id="@+id/BtnRewindRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_rewind_white_right" />
        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fbOpenPlaylist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_play_white_24dp"
        app:backgroundTint="@color/pink_A400"
        app:layout_anchor="@id/rlTopSectionBckg"
        app:layout_anchorGravity="bottom|right|end" />
</android.support.design.widget.CoordinatorLayout>
