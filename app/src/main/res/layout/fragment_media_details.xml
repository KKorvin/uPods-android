<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rlDetailedContent"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlDetailsHeaderContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <View
                android:alpha="0.9"
                android:id="@+id/viewDetailedHeader"
                android:layout_width="fill_parent"
                android:layout_height="155dp" />

            <ImageView
                android:id="@+id/imgDetailedCover"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_temp" />

            <TextView
                android:id="@+id/tvDetailedHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@+id/imgDetailedFavorites"
                android:layout_toRightOf="@+id/imgDetailedCover"
                android:text="acascdas"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size_20" />

            <ImageView
                android:id="@+id/imgDetailedFavorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/imgDetailedMenu"
                android:src="@drawable/ic_star_border_white_24dp" />

            <ImageView
                android:id="@+id/imgDetailedMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_more_vert_white_24dp" />

            <TextView
                android:id="@+id/tvDetailedSubHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDetailedHeader"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/imgDetailedCover"
                android:text="acascdas"
                android:textColor="@color/white"
                android:textSize="@dimen/default_text_size_20" />

        </RelativeLayout>

        <View
            android:id="@+id/vDetailsDevider"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/rlDetailsHeaderContainer"
            android:background="@color/indigo_800"></View>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fbDetailsPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="175dp"
            app:backgroundTint="@color/pink_A400"
            android:src="@drawable/ic_play_arrow_white_24dp"
            app:elevation="4dp" />

        <com.chickenkiller.upods2.views.ControllableScrollView
            android:id="@+id/svDetails"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/vDetailsDevider">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDetailedDesHeader"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="22dp"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/default_text_size_18"
                    android:fontFamily="sans-serif"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDetailedDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-light"
                    android:textStyle="normal"
                    android:textColor="@color/gray_202020"
                    android:textSize="@dimen/default_text_size_16" />
            </LinearLayout>
        </com.chickenkiller.upods2.views.ControllableScrollView>
    </RelativeLayout>
</LinearLayout>
